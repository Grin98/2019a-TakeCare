<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--App colors-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <!--App window settings-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--App AppBar settings-->
        <item name="android:actionOverflowButtonStyle">@style/UserSettings</item>

        <!-- Works only for API 21 and above -->
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="UserSettings" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_user_vector_white</item>
    </style>

    <style name="MenuTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_title</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>

    <style name="SecondaryTextHint">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
